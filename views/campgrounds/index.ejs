<% include ../partials/header  %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class="btn btn-lg btn-primary" href="campgrounds/new">Create a new campground</a>
			</p>
		</div>
	</header>

	<div class="row text-center">
		<div class="col-lg-12">
			<h3>Our Most Popular Campgrounds</h3>
		</div>
		<% campgrounds.forEach(function(campground){ %>
		<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
			<div class="card">
				<div class="card-body">
					<img src="<%= campground.image %>" class="card-img-top">
					<h4 class="card-title"> <%= campground.name %> </h4>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		</div>
				<% }) %>
		
	</div>
</div>	
		
	

<% include ../partials/footer %>