<% include ../partials/header %>

<div class="row justify-content-center">
	<div class="col-12 text-center">
		<h1>Create a new campground</h1>
	</div>
	<div class="col-12 col-md-6 col-lg-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" placeholder="price" min=".01" step=".01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url">								</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">						</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Back to Campgrounds</a>
		</div>
</div>

<% include ../partials/footer %>

