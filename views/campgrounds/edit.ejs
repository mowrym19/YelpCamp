
<% include ../partials/header %>

<div class="container">		
	<div class="row justify-content-center">
		<div class="col-12">
			<h1 class="text-center">Edit <%= campground.name %></h1>
		</div>
		<div class="col-12 col-md-6 col-lg-4">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>"</input>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" value="<%= campground.price%>" min=".01" step=".01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>"						</input>								
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>"</input>						</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds/:id">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>

